@model LightningOffer.Models.Property

@{
    ViewData["Title"] = "Create";
}

<h1>Start your offer :)</h1>

<h4>Progress bar goes here 1/x.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h5>What's the property address?</h5>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <h5>Which county is the property in?</h5>
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="County" class="form-check-input" type="radio" name="County" value="Shelby" id="ShelbyCounty" />
                    <label asp-for="County" class="form-check-label control-label" for="ShelbyCounty">
                        Shelby County
                    </label>
                    <span asp-validation-for="County" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="County" class="form-check-input" type="radio" name="County" value="Jefferson" id="JeffersonCounty" disabled />
                    <label asp-for="County" class="form-check-label control-label" for="JeffersonCounty">
                        Jefferson County
                    </label>
                    <span asp-validation-for="County" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="County" class="form-check-input" type="radio" name="County" value="Olhdam" id="OldhamCounty" disabled />
                    <label asp-for="County" class="form-check-label control-label" for="OldhamCounty">
                        Oldham County
                    </label>
                    <span asp-validation-for="County" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

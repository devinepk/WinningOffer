@model LightningOffer.Models.Appraisal

@{
    ViewData["Title"] = "Create";
}

<h1>Appraisal Contingency [icon]</h1>

<div class="progress">
    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 45%" aria-valuenow="27" aria-valuemin="0" aria-valuemax="100">45% Completed</div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <!-- <div asp-validation-summary="ModelOnly" class="text-danger"></div>-->
            <div class="form-group">
                <h5>Is this contingent on an appraisal?</h5>
                <div class="form-check" id="appraisalType">
                    <input class="form-check-input" type="radio" name="appraisalType" id="appraisalType" value="1" />
                    <label class="form-check-label control-lable" for="appraisalType">
                        Yes: This transaction involves a lender's appraisal.
                    </label>
                    <!-- <span asp-validation-for="Lender_Appraisal_Required" class="text-danger"></span>-->
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="appraisalType" id="appraisalType" value="2" />
                    <label class="form-check-label" for="appraisalType">
                        Yes: This is a cash, private financing, or contract for deed transaction.
                    </label>
                    <!-- <span asp-validation-for="Buyer_Appraisal_Required" class="text-danger"></span>-->
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="appraisalType" id="appraisalType" value="3" />
                    <label class="form-check-label" for="appraisalType">
                        No: This is a cash, private financing, or contract for deed transaction.
                    </label>
                    <!-- <span asp-validation-for="No_Appraisal_Required" class="text-danger"></span> -->
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Next" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

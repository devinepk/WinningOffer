@model LightningOffer.Models.Appraisal

@{
    ViewData["Title"] = "Create";
}

<h1>Appraisal [icon]</h1>

<div class="progress">
    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 45%" aria-valuenow="27" aria-valuemin="0" aria-valuemax="100">45% Completed</div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CreatedDate" class="control-label"></label>
                <input asp-for="CreatedDate" class="form-control" />
                <span asp-validation-for="CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lender_Appraisal_Required" class="control-label"></label>
                <input asp-for="Lender_Appraisal_Required" class="form-control" />
                <span asp-validation-for="Lender_Appraisal_Required" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Buyer_Appraisal_Required" class="control-label"></label>
                <input asp-for="Buyer_Appraisal_Required" class="form-control" />
                <span asp-validation-for="Buyer_Appraisal_Required" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="No_Appraisal_Required" class="control-label"></label>
                <input asp-for="No_Appraisal_Required" class="form-control" />
                <span asp-validation-for="No_Appraisal_Required" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

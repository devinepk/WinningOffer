@model LightningOffer.Models.Financial


@{
    ViewData["Title"] = "Create";
}

<h1>Financing [icon]</h1>
<h4>Progress bar 3 here 3/x.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h5>What's the purchase price?</h5>
            <div class="form-group">
                <!--<label asp-for="Purchase_Price" class="control-label"></label>-->
                <input asp-for="Purchase_Price" class="form-control" />
                <span asp-validation-for="Purchase_Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>How much is the ernest money deposit?</h5>
                <div class="form-check" id="EMD">
                    <input asp-for="EMD" class="form-check-input" type="radio" name="EMD" value="500" id="EMD" />
                    <label asp-for="EMD" class="form-check-label control-label" for="EMD">
                        $500
                    </label>
                </div>
                <div class="form-check">
                    <input asp-for="EMD" class="form-check-input" type="radio" name="EMD" value="1000" id="EMD" />
                    <label asp-for="EMD" class="form-check-label control-label" for="EMD">
                        $1000
                    </label>
                </div>
                <div class="form-check">
                    <input asp-for="EMD" class="form-check-input" type="radio" name="EMD" value="2500" id="EMD" />
                    <label asp-for="EMD" class="form-check-label control-label" for="EMD">
                        $2500
                    </label>
                </div>
                <div class="form-check">
                    <input asp-for="EMD" class="form-check-input" type="radio" name="EMD" value="5000" id="EMD" />
                    <label asp-for="EMD" class="form-check-label control-label" for="EMD">
                        $5000
                    </label>
                </div>
                <br />
                <h5>How is the rest of the home being paid for?</h5>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Cash" /> @Html.DisplayNameFor(model => model.Cash)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="LineOfEquity" /> @Html.DisplayNameFor(model => model.LineOfEquity)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Gift" /> @Html.DisplayNameFor(model => model.Gift)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Other_Financing" /> @Html.DisplayNameFor(model => model.Other_Financing)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Conventional" /> @Html.DisplayNameFor(model => model.Conventional)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="FHA" /> @Html.DisplayNameFor(model => model.FHA)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="VA" /> @Html.DisplayNameFor(model => model.VA)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Fixed_Rate" /> @Html.DisplayNameFor(model => model.Fixed_Rate)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Loan_Length" class="control-label"></label>
                    <input asp-for="Loan_Length" class="form-control" />
                    <span asp-validation-for="Loan_Length" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Interest_Rate" class="control-label"></label>
                    <input asp-for="Interest_Rate" class="form-control" />
                    <span asp-validation-for="Interest_Rate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ARM_Limits" class="control-label"></label>
                    <input asp-for="ARM_Limits" class="form-control" />
                    <span asp-validation-for="ARM_Limits" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Buyer_Loan_Application_Start" class="control-label"></label>
                    <input asp-for="Buyer_Loan_Application_Start" class="form-control" />
                    <span asp-validation-for="Buyer_Loan_Application_Start" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="EMD_With_ListingBroker" /> @Html.DisplayNameFor(model => model.EMD_With_ListingBroker)
                    </label>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="EMD_With_SellingBroker" /> @Html.DisplayNameFor(model => model.EMD_With_SellingBroker)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

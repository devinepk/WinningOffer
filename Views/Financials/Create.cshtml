@model LightningOffer.Models.Financial


@{
    ViewData["Title"] = "Create";

}

<script>
    // hides the downpayment questions when the page loads
    function hideDiv() {
        window.onload = function () {
            document.getElementById("CashDP").style.display = 'none';
            document.getElementById("PercentDP").style.display = 'none';
        };
    };

    function ShowHide() {
        var dollarRadioButton = document.getElementById("CashDP");
        var percentRadioButton = document.getElementById("PercentDP");

        // if the dollar sign is selected, show the dollar div. If the 
        if (dollarRadioButton.style.display == "none") {
            percentRadioButton.style.display = "none";
            dollarRadioButton.style.display = "block";
        } else if (percentRadioButton.style.display == "none" && dollarRadioButton.style.display == "block") {
            dollarRadioButton.style.display = "none";
            percentRadioButton.style.display = "block";
        } else if (dollarRadioButton.style.display == "block" && dollarRadioButton.style.display == "none") {
            dollarRadioButton.style.display = "block";
            percentRadioButton.style.display = "none";
        }
       
    };

</script>




<h1>Financing [icon]</h1>
<h4>Progress bar 3 here 3/x.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h5>What's the purchase price?</h5>
            <div class="form-group">
                <!--<label asp-for="Purchase_Price" class="control-label"></label>-->
                <input asp-for="Purchase_Price" class="form-control" placeholder="$230,000" />
                <span asp-validation-for="Purchase_Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>How much is the earnest money deposit?</h5>
                <div class="form-check" id="EMD">
                    <input asp-for="EMD" class="form-check-input" type="radio" name="EMD" value="500" id="EMD" />
                    <label asp-for="EMD" class="form-check-label control-label" for="EMD">
                        $500
                    </label>
                </div>
                <div class="form-check">
                    <input asp-for="EMD" class="form-check-input" type="radio" name="EMD" value="1000" id="EMD" />
                    <label asp-for="EMD" class="form-check-label control-label" for="EMD">
                        $1000
                    </label>
                </div>
                <div class="form-check">
                    <input asp-for="EMD" class="form-check-input" type="radio" name="EMD" value="2500" id="EMD" />
                    <label asp-for="EMD" class="form-check-label control-label" for="EMD">
                        $2500
                    </label>
                </div>
                <div class="form-check">
                    <input asp-for="EMD" class="form-check-input" type="radio" name="EMD" value="5000" id="EMD" />
                    <label asp-for="EMD" class="form-check-label control-label" for="EMD">
                        $5000
                    </label>
                </div>
            </div>
            <div class="form-group">
                <h5>Where is the earnest money deposit being held?</h5>
                <div class="form-check" id="EMD_Holding">
                    <label class="form-check-label control-label" for="EMD_Holding">
                        <input class="form-check-input" type="radio" name="EMD_Holding" value="ListingBroker" id="EMD_Holding" asp-for="EMD_With_ListingBroker" /> @Html.DisplayNameFor(model => model.EMD_With_ListingBroker)
                    </label>
                </div>
                <div class="form-check control-label">
                    <label class="form-check-label control-label" for="EMD_Holding">
                        <input class="form-check-input" type="radio" name="EMD_Holding" value="SellingBroker" id="EMD_Holding" asp-for="EMD_With_SellingBroker" /> @Html.DisplayNameFor(model => model.EMD_With_SellingBroker)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <h5>Where is the down payment coming from?</h5>
                <div class="form-check" id="DownPaymentSource">
                    <label class="form-check-label control-label" for="DownPaymentSource">
                        <input class="form-check-input" type="radio" name="DownPaymentSource" value="Cash" asp-for="DownPaymentSource" />Cash
                    </label>
                </div>
                <div class="form-check control-label">
                    <label class="form-check-label control-label" for="DownPaymentSource">
                        <input class="form-check-input" type="radio" name="DownPaymentSource" value="Equity_Line" asp-for="DownPaymentSource" />Equity Line
                    </label>
                </div>
                <div class="form-check control-label">
                    <label class="form-check-label control-label" for="DownPaymentSource">
                        <input class="form-check-input" type="radio" name="DownPaymentSource" value="Gift" asp-for="DownPaymentSource" />Gift
                    </label>
                </div>
                <div class="form-check control-label">
                    <label class="form-check-label control-label" for="DownPaymentSource">
                        <input class="form-check-input" type="radio" name="DownPaymentSource" value="Other" asp-for="DownPaymentSource" />Other
                    </label>
                </div>
            </div>
            <div class="form-group">
                <h5>Is the down payment in <strong>dollars</strong> or a <strong>percentage</strong> of the purchase price?</h5>
                <div class="form-check control-label">
                    <label class="form-check-label control-label" for="DownPaymentAmount">
                        <input class="form-check-input" type="radio" onclick="ShowHide()" name="DownPaymentAmount" value="$" />$ (Dollars)
                    </label>
                </div>
                <div class="form-check control-label">
                    <label class="form-check-label control-label" for="DownPaymentAmount">
                        <input class="form-check-input" type="radio" onclick="ShowHide()" name="DownPaymentAmount" value="%" />% (Percentage of Purchase Price)
                    </label>
                </div>
            </div>
            <div class="form-group" id="CashDP" onload="hideDiv()" style="display: none">
                <h5>How much cash are they putting down?</h5>
                <div class="form-group" id="DownPaymentAmount">
                    <input type="number" asp-for="DownPaymentAmount" class="form-control" placeholder="$4500" />
                    <span asp-validation-for="DownPaymentAmount" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group" id="PercentDP" onload="hideDiv()" style="display: none">
                <h5>What percent of the purchase price are they putting down?</h5>
                <div class="form-group" id="DownPaymentAmount">
                    <input type="number" asp-for="DownPaymentAmount" class="form-control" placeholder="25%" />
                    <span asp-validation-for="DownPaymentAmount" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="LoanType" /> @Html.DisplayNameFor(model => model.LoanType)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Rate_Type" /> @Html.DisplayNameFor(model => model.Rate_Type)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Loan_Length" class="control-label"></label>
                <input asp-for="Loan_Length" class="form-control" />
                <span asp-validation-for="Loan_Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Interest_Rate" class="control-label"></label>
                <input asp-for="Interest_Rate" class="form-control" />
                <span asp-validation-for="Interest_Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ARM_Limits" class="control-label"></label>
                <input asp-for="ARM_Limits" class="form-control" />
                <span asp-validation-for="ARM_Limits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Buyer_Loan_Application_Start" class="control-label"></label>
                <input asp-for="Buyer_Loan_Application_Start" class="form-control" />
                <span asp-validation-for="Buyer_Loan_Application_Start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>



        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

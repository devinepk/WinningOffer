@model LightningOffer.Models.FuelPropane

@{
    ViewData["Title"] = "Create";
}

<h1>Fuel/Propane Questions</h1>

<h4>Progress bar 3 here 3/x.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h5>Is the propane tank owned or leased?</h5>
                <div class="form-check" id="Propane_Tank_Ownership">
                    <input asp-for="Propane_Tank_Ownership" class="form-check-input" type="radio" name="Propane_Tank_Ownership" value="1" id="Propane_Tank_Ownership" />
                    <label asp-for="Propane_Tank_Ownership" class="form-check-label control-label" for="Propane_Tank_Ownership">
                        Owned
                    </label>
                </div>
                <div class="form-check">
                    <input asp-for="Propane_Tank_Ownership" class="form-check-input" type="radio" name="Propane_Tank_Ownership" value="2" id="Propane_Tank_Ownership" />
                    <label asp-for="Propane_Tank_Ownership" class="form-check-label control-label" for="Propane_Tank_Ownership">
                        Leased
                    </label>
                </div>
                <span asp-validation-for="Propane_Tank_Ownership" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>Is it staying with the property?</h5>
                <div class="form-check" id="Propane_Tank_Status">
                    <input asp-for="Propane_Tank_Status" class="form-check-input" type="radio" name="Propane_Tank_Status" value="1" id="Propane_Tank_Status" />
                    <label asp-for="Propane_Tank_Status" class="form-check-label control-label" for="Propane_Tank_Status">
                        Yes
                    </label>
                </div>
                <div class="form-check" id="Propane_Tank_Status">
                    <input asp-for="Propane_Tank_Status" class="form-check-input" type="radio" name="Propane_Tank_Status" value="2" id="Propane_Tank_Status" />
                    <label asp-for="Propane_Tank_Status" class="form-check-label control-label" for="Propane_Tank_Status">
                        No
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

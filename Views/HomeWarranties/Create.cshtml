@model LightningOffer.Models.HomeWarranty

@{
    ViewData["Title"] = "Create";
}

<h1>Home Warranty [icon]</h1>

<div class="progress">
    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 54%" aria-valuenow="54" aria-valuemin="0" aria-valuemax="100">54% Completed</div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h5>Is the seller paying anything towards a home warranty?</h5>
                <div class="form-check" id="whoPays">
                    <input class="form-check-input" asp-for="Who_Pays" type="radio" name="whoPays" value="yes" id="whoPays" />
                    <label class="form-check-label control-label" asp-for="Who_Pays" for="whoPays">
                        Yes
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" asp-for="Who_Pays" type="radio" name="whoPays" value="no" id="whoPays" />
                    <label class="form-check-label control-label" asp-for="Who_Pays" for="whoPays">
                        No
                    </label>
                </div>
            </div>
            <div class="form-group form-check">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="New_Construction_HW" /> @Html.DisplayNameFor(model => model.New_Construction_HW)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Buyer_Waves_Right_To_HW" /> @Html.DisplayNameFor(model => model.Buyer_Waves_Right_To_HW)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Buyer_To_Purchase_HW_Later" /> @Html.DisplayNameFor(model => model.Buyer_To_Purchase_HW_Later)
                </label>
            </div>
            

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

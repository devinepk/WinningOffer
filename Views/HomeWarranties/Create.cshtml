@model LightningOffer.Models.HomeWarranty

@{
    ViewData["Title"] = "Create";
}


<script>
    function hideDiv() {
        window.onload = function () {
            document.getElementById("HWPrice").style.display = 'none';
        };
    };

    function showPrice() {
        console.log("show the price ");

        var price = document.getElementById("HWPrice");
      
        if (price.style.display == "none") {
            price.style.display = "block";
        };
    };

    function hidePrice() {
        console.log("hide the price");

        var price = document.getElementById("HWPrice");

        if (price.style.display == "block") {
            price.style.display = "none";
        };
    };

</script>

<h1>Home Warranty [icon]</h1>

<div class="progress">
    <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 54%" aria-valuenow="54" aria-valuemin="0" aria-valuemax="100">54% Completed</div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h5>Is the seller paying anything towards a home warranty?</h5>
                <div class="form-check">
                    <input class="form-check-input" asp-for="Who_Pays" type="radio" name="whoPays" value="no" id="whoPaysNo" onclick="hidePrice()" />
                    <label class="form-check-label control-label" asp-for="Who_Pays" for="whoPays">
                        No
                    </label>
                </div>
                <div class="form-check" id="whoPays">
                    <input class="form-check-input" asp-for="Who_Pays" type="radio" name="whoPays" value="yes" id="whoPaysYes" onclick="showPrice()" />
                    <label class="form-check-label control-label" asp-for="Who_Pays" for="whoPays">
                        Yes
                    </label>
                </div>
            </div>
            <div class="form-group" id="HWPrice" onload="hideDiv()" style="display: none">
                <h5>How much is the seller paying towards the home warranty?</h5>
                <div class="form-group" id="price">
                    <input asp-for="Price" class="form-control" />                   
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <h5>Who is choosing/ordering the home warranty?</h5>
                <div class="form-check">
                    <input class="form-check-input" asp-for="who_chooses" type="radio" name="who_chooses" value="buyer" id="who_chooses"/>
                    <label class="form-check-label control-label" asp-for="who_chooses" for="who_chooses">
                        The Buyer
                    </label>
                </div>
                <div class="form-check" id="whoPays">
                    <input class="form-check-input" asp-for="who_chooses" type="radio" name="who_chooses" value="seller" id="who_chooses" />
                    <label class="form-check-label control-label" asp-for="who_chooses" for="who_chooses">
                        The Seller
                    </label>
                </div>
            </div>
            <div class="form-group" id="buyerOptions" onload="hideDiv()" style="display: none">
                <h5>Select an option for home warranty below:</h5>
                <div class="form-group" id="buyerWarranties">
                    <input class="form-check-input" asp-for="Buyer_Final_Options" type="radio" name="buyerPurchasesLimited" value="buyerPurchasesLimited" />
                    <label class="form-check-label control-label" asp-for="Buyer_Final_Options" for="buyerPurchasesLimited">
                        Buyer agrees to purchase a home warranty
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
